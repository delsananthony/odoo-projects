<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- account.move inherit form view -->
    <record id="view_move_form_inherited" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//button[@name='action_register_payment']" position="after">
                <button name="action_receipt_print" string="Official Receipt" type="object" class="oe_highlight" groups="account.group_account_invoice" attrs="{'invisible': [('state', '=', 'draft')]}"/>
            </xpath>
            
        </field>
    </record>

</odoo>