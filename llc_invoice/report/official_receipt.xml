<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="view_official_receipt_report" model="ir.actions.report">
        <field name="name">Official Receipt</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">llc_invoice.shopee_official_receipt</field>
        <field name="report_file">llc_invoice.shopee_official_receipt</field>
        <!-- <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field> -->
    </record>

    <template id="shopee_official_receipt" >
        <t t-call="web.html_container" >
            <t t-call="web.internal_layout">
                <style> 
                    :root {
                        font-size: 10pt;
                    }
                    table, th, tr, td {
                        padding: 0px;
                    }
                    .left-margin {
                        padding-left: 90px;
                    }
                </style>
                <t t-foreach="docs" t-as="o" >
                    <table width="100%">
                        <tr>
                            <td class="left-margin" style="width: 70%; left: 120px;"><span t-esc="o.partner_id.name" /></td>
                            <td class="left-margin" style="width: 30%; left: 120px;"><span t-esc="str(o.invoice_date).replace('-', '/')" /></td>
                        </tr>
                        <tr>
                            <!-- <td class="left-margin"><span t-esc="o.partner_id.street + ', ' + o.partner_id.city + ', ' +  o.partner_id.country_id.name " /></td> -->
                            <td class="left-margin"><span t-esc="'{}, {}, {}'.format(o.partner_id.street, o.partner_id.city, o.partner_id.country_id.name)" /></td>
                            <td class="left-margin">OSCA/PWD ID</td>
                        </tr>
                        <tr>
                            <td>.</td>
                            <td class="left-margin">SI#</td>
                        </tr>
                        <tr>
                            <td>.</td>
                            <td class="left-margin">REF#</td>
                        </tr>
                    </table>
                    <span style="height: 10px; border-style: solid;" >.</span>
                <div class="page">
                    <t t-set="lines" t-value="o.invoice_line_ids" />
                    <div style="height: 275px;">
                    <table width="100%" border="1">
                    <t t-foreach="lines" t-as="line">
                        <tr>
                            <td style="width: 8%;"><span t-esc="'{:.2f}'.format(line.quantity)" /></td>
                            <td style="width: 10%;">.</td>
                            <td style="width: 62%;"><span t-esc="line.product_id.name" /></td>
                            <td style="width: 8%;"><span t-esc="'{:.2f}'.format(line.price_unit)" /></td>
                            <td style="width: 12%;"><span t-esc="'{:.2f}'.format(line.price_subtotal)" /></td>
                        </tr>
                    </t>
                    </table>
                    </div>
                    <table width="100%">
                        <tr>
                            <td style="width:50%;">.</td>
                            <td style="width:10%;">.</td>
                            <td style="width:30%;">.</td>
                            <td style="width:10%;">.</td>
                        </tr>
                        <tr>
                            <td style="width:50%;">.</td>
                            <td style="width:10%;">.</td>
                            <td style="width:30%;">.</td>
                            <td style="width:10%;">.</td>
                        </tr>
                        <tr>
                            <td style="width:50%;">.</td>
                            <td style="width:10%;">.</td>
                            <td style="width:30%;">.</td>
                            <td style="width:10%;">.</td>
                        </tr>
                        <tr>
                            <td style="width:50%;">.</td>
                            <td style="width:10%;">.</td>
                            <td style="width:30%;">.</td>
                            <td style="width:10%;">.</td>
                        </tr>
                        <tr>
                            <td style="width:50%;">.</td>
                            <td style="width:10%;">.</td>
                            <td style="width:30%;">.</td>
                            <td style="width:10%;">.</td>
                        </tr>
                        <tr>
                            <td style="width:50%;">.</td>
                            <td style="width:10%;">.</td>
                            <td style="width:30%;">.</td>
                            <td style="width:10%;">.</td>
                        </tr>
                        <tr>
                            <td style="width:50%;">.</td>
                            <td style="width:10%;">.</td>
                            <td style="width:30%;">.</td>
                            <td style="width:10%;"><span t-esc="'{:.2f}'.format(o.amount_residual)" /></td>
                        </tr>
                    </table>
                </div>
                </t>
            </t>
        </t>
    </template>

</odoo>